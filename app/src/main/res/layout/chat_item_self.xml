<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingBottom="5dp">

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:fontFamily="sans-serif" />-->
    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_bubble_self"
        android:textColor="@android:color/white"
        android:textIsSelectable="true"
        android:textSize="14sp" />

    </LinearLayout>



    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearInsurance"
            android:visibility="gone"
            android:layout_marginBottom="10dp"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="2dp"
                app:cardCornerRadius="20dp"
                android:id="@+id/cardLic"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">


                    <ImageView
                        android:id="@+id/ivicon"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:src="@drawable/life"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="LIC"
                        android:textAlignment="center"
                        android:fontFamily="@font/alata_regular"
                        android:textSize="9sp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/ivicon"
                        />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="2dp"
                app:cardCornerRadius="20dp"
                android:id="@+id/cardBusinessLoan"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:src="@drawable/hospita"
                        android:id="@+id/ivicon2"
                        android:layout_centerHorizontal="true"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="Health Ins"
                        android:fontFamily="@font/alata_regular"
                        android:textSize="9sp"
                        android:textAlignment="center"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/ivicon2"
                        />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="2dp"
                app:cardCornerRadius="20dp"
                android:id="@+id/cardMotor"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">


                    <ImageView
                        android:id="@+id/ivicon3"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:src="@drawable/motor"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="Motor"
                        android:fontFamily="@font/alata_regular"
                        android:textSize="9sp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/ivicon3"
                        />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="2dp"
                app:cardCornerRadius="20dp"
                android:id="@+id/cardInvestment"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:src="@drawable/investmentt"
                        android:id="@+id/ivicon4"
                        android:layout_centerHorizontal="true"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="Investments"
                        android:fontFamily="@font/alata_regular"
                        android:textSize="9sp"
                        android:textAlignment="center"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/ivicon4"
                        />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>

    </HorizontalScrollView>


</LinearLayout>